@using AskAMech.Core.Domain
@model AskAMech.Core.Login.Responses.LoginResponse

<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="loginLabel">Login</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div asp-validation-summary="ModelOnly"></div>
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <input name="UserRoleId" type="hidden" value="@UserSecurityManager.UserRoleId" />

                    <div class="row md-Padding-Top-10">
                        <div class="col-md-1">
                        </div>
                        <div class="col-md-10">
                            <div class="input-group mb-3">
                                <input asp-for="Email" placeholder="Email Address" class="form-control" />
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <i class="material-icons">person</i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-1">
                        </div>
                        <div class="col-md-10">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row md-Padding-Top-10">
                        <div class="col-md-1">
                        </div>
                        <div class="col-md-10">
                            <div class="input-group mb-3">
                                <input asp-for="Password" type="password" placeholder="Password" class="form-control" />
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <i class="material-icons">lock</i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-1">
                        </div>
                        <div class="col-md-10">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-1">
                        </div>
                        <div class="col-md-11">
                            <input id="ShowPassword" Checkbox_CheckedChanged="modal" type="checkbox" class="md-Padding-Right-5">
                            <label>Show Password</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col-md-10">
                            <label id="LoginErrorMessage" class="text-danger">@Model?.LoginErrorMessage</label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <img id="loadingImg" src="/images/loading.gif" class="loadingImage hide" />
                <button type="button" class="btn btn-primary" data-save="modal">Login</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>