@model AskAMech.Core.UseCases.Responses.GetRolesResponse
@{
    ViewData["Title"] = "_RolesList";
}

<hr />
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3 class="text-left">
                Current Roles
            </h3>
        </div>
    </div>
    
    <div class="row w-50">
        <div class="col-md-12">
            @if (Model.UserRoles.Any())
            {
                <table id="RolesTable" class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody class="table-bordered">
                        @foreach (var item in Model.UserRoles)
                        {
                            <tr>
                                <td>@item.Description</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <h3>No Records Found</h3>
            }
        </div>
    </div>
</div>