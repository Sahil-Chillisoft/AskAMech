@model AskAMech.Core.UseCases.Responses.GetUserQuestionsResponse

<form>
    <div class="container bg-ghost-white">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-center">
                    Questions User Has Posted
                </h2>
            </div>
        </div>

        <div class="row md-Padding-Top-20">
            <div class="col-md-12">
                @if (Model.UserQuestions.Any())
                {
                    <table id="UserQuestionsTable" class="table full-width">
                        <thead class="thead-dark">
                        <tr>
                            <th></th>
                            <th>Question Title</th>
                            <th>Category</th>
                            <th>Date Posted</th>
                            <th>Date Last Modified</th>
                            <th>Answers</th>
                        </tr>
                        </thead>
                        <tbody class="table-striped">
                            @foreach (var item in Model.UserQuestions)
                            {
                                <tr>
                                    <td>
                                        <a asp-controller="Question" asp-action="ViewQuestion" asp-route-id="@item.Id" title="View Question">
                                            <i class="material-icons md-30">info</i>
                                        </a>
                                    </td>
                                    <td>@item.Title</td>
                                    <td>@item.CategoryDescription</td>
                                    <td>@item.DateCreated.ToString("dd/MM/yyyy")</td>
                                    <td>@item.DateLastModified.ToString("dd/MM/yyyy")</td>
                                    <td>@item.AnswerCount</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <h3>This user has posted no questions as yet</h3>
                }
            </div>
        </div>
    </div>
</form>
