@model AskAMech.Core.UseCases.Responses.UpdateUserPasswordResponse

<div class="modal fade" id="updateModal" tabindex="-1" role="dialog" aria-labelledby="updateLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateLabel">update Password</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div asp-validation-summary="ModelOnly">
                    </div>
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div class="row md-Padding-Top-10">
                        <div class="col-md-1">
                        </div>

                        <div class="row md-Padding-Top-10">
                            <div class="col-md-12">
                                <label asp-for="Password"></label>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group">
                                    <input id="Password" asp-for="Password" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row md-Padding-Top-10">
                            <div class="col-md-12">
                                <label asp-for="confirmPassword"></label>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group">
                                    <input id="ConfirmPassword" asp-for="confirmPassword" class="form-control"/>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <span asp-validation-for="confirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-1"></div>
                            <div class="col-md-11">
                                <span id="PasswordMatcherValidation"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-1"></div>
                            <div class="col-md-10">
                                <label id="ErrorMessage" class="text-danger">@Model?.ErrorMessage</label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <img id="loadingImg" src="images/loading.gif" class="loadingImage hide" />
                <button type="button" class="btn btn-primary" data-save="modal">Update</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/User/PasswordMatcher.js"></script>