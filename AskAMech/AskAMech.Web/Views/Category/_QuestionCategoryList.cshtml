@model AskAMech.Core.UseCases.Responses.GetCategoryResponse

<div class="container">
    <hr />
    <div class="row">
        <div class="col-md-12">
            <h3 class="text-left">
                Current Categories
            </h3>
        </div>
    </div>
    <div class="row w-50">
        <div class="col-md-12">
            @if (Model.AllCategories.Any())
            {
                <table id="CategoriesTable" class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>Category Name</th>
                        </tr>
                    </thead>
                    <tbody class="table-bordered">
                        @foreach (var item in Model.AllCategories)
                        {
                            <tr>
                                <td>@item.Description</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <h3>No Records Found</h3>
            }
        </div>
    </div>
</div>
