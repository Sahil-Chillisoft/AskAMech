                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <textarea id="Answer" placeholder="Enter Answer..." class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <span id="AnswerValidation" class="text-danger"></span>
                        </div>
                    </div>
                </div>
